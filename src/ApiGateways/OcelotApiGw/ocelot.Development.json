{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },
  "Routes": [
    // Product api : http://localhost:6002/api/products
    {
      "UpstreamPathTemplate": "/api/products",
      "UpstreamHttpMethod": [
        "GET",
        "POST"
      ],
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/products/{any}",
      "UpstreamHttpMethod": [
        "GET",
        "PUT",
        "DELETE"
      ],
      "DownstreamPathTemplate": "/api/products/{any}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/products/get-product-by-no/{any}",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/products/get-product-by-no/{any}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ]
    },
    // Customer api
    {
      "UpstreamPathTemplate": "/api/customers/{username}",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/customers/{username}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ]
    },
    // Basket api: http://localhost:5004/api/baskets
    {
      "UpstreamPathTemplate": "/api/baskets/{username}",
      "UpstreamHttpMethod": [
        "GET",
        "DELETE"
      ],
      "DownstreamPathTemplate": "/api/baskets/{username}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/baskets",
      "UpstreamHttpMethod": [
        "POST"
      ],
      "DownstreamPathTemplate": "/api/baskets",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/baskets/checkout",
      "UpstreamHttpMethod": [
        "POST"
      ],
      "DownstreamPathTemplate": "/api/baskets/checkout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ]
    }
  ]
}
